{
  "apps": [{
    "name": "alms-backend",
    "script": "dist/main.js",
    "instances": 1,
    "exec_mode": "cluster",
    "autorestart": true,
    "watch": false,
    "max_memory_restart": "768M",
    "env": {
      "NODE_ENV": "production"
    },
    "error_file": "/var/log/pm2/alms-error.log",
    "out_file": "/var/log/pm2/alms-out.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "min_uptime": "10s",
    "max_restarts": 10,
    "restart_delay": 4000,
    "kill_timeout": 5000,
    "wait_ready": true,
    "listen_timeout": 10000
  }]
}
